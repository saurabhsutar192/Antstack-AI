---
import type { ImageMetadata } from "astro";
import { Image } from "astro:assets";
interface Props {
  imgSrc: ImageMetadata;
}

const { imgSrc } = Astro.props;
---

<div class="case-card">
  <div class="img-container">
    <Image src={imgSrc} alt="x" />
  </div>
  <div class="text-container">
    <slot />
  </div>
</div>

<style lang="scss">
  @import "@/utils/_colors.scss";

  .case-card {
    border: 1px solid $accent-light;
    border-radius: 1.5vw;
    display: flex;
    flex-direction: column;
    align-items: center;
    overflow: hidden;
    .img-container {
      width: 100%;
      border-radius: 1.5vw;
      overflow: hidden;
      display: flex;
      align-items: stretch;
      img {
        width: 100%;
        height: 100%;
        object-fit: cover;
      }
    }

    .text-container {
      font-size: 0.9vw;
      padding: 1.5vw 1vw;
    }
  }
</style>
